<Alloy>
	<Window id="secondwin" class="container" onOpen="doopen">

		<!-- this screen is cross-platform, so we need to add the platform selector to the ActionBar tag 	-->
		<!-- thig tag will only be used when the app is compiled for Android 								-->
		<ActionBar displayHomeAsUp="true" onHomeIconItemSelected="closewin" platform="android"/>

		<View id="opaqueView" />
		<View id="mainView">
			<View id="innerView">
				<ImageView id="staticMap"/>
				<Label id="address"></Label>
			</View>
			<ImageView id="foursquare"></ImageView>
			<View id="buttonBar">
				<ImageView id="appleMapButton" class="iconButton" platform="ios" />
				<ImageView id="googleMapButton" class="iconButton" />
			</View>
		</View>
	</Window>
</Alloy>